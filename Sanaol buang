local Player = game:GetService("Players").LocalPlayer
local CoreGui = game:GetService("CoreGui")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")

-- Siguraduhin na walang duplicate na UI bago i-run
local function Cleanup()
    local old = CoreGui:FindFirstChild("JeloLocalWindow") or Player.PlayerGui:FindFirstChild("JeloLocalWindow")
    if old then old:Destroy() end
end
Cleanup()

-- MAIN LIBRARY OBJECT
local JeloLib = {}

function JeloLib:CreateWindow(hubName)
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "JeloLocalWindow"
    pcall(function() ScreenGui.Parent = CoreGui end)
    if not ScreenGui.Parent then ScreenGui.Parent = Player:WaitForChild("PlayerGui") end
    ScreenGui.ResetOnSpawn = false

    -- Main Frame
    local Main = Instance.new("Frame")
    Main.Name = "Main"
    Main.Parent = ScreenGui
    Main.BackgroundColor3 = Color3.fromRGB(15, 0, 0)
    Main.Position = UDim2.new(0.5, -150, 0.4, -100)
    Main.Size = UDim2.new(0, 320, 0, 260)
    Main.BorderSizePixel = 0
    Main.ClipsDescendants = true -- Mahalaga para sa folding
    
    local MainStroke = Instance.new("UIStroke")
    MainStroke.Color = Color3.fromRGB(255, 0, 0)
    MainStroke.Thickness = 2
    MainStroke.Parent = Main

    local MainCorner = Instance.new("UICorner")
    MainCorner.CornerRadius = UDim.new(0, 10)
    MainCorner.Parent = Main

    -- TopBar
    local TopBar = Instance.new("Frame")
    TopBar.Name = "TopBar"
    TopBar.Parent = Main
    TopBar.BackgroundColor3 = Color3.fromRGB(180, 0, 0)
    TopBar.Size = UDim2.new(1, 0, 0, 35)
    
    local TopCorner = Instance.new("UICorner")
    TopCorner.CornerRadius = UDim.new(0, 10)
    TopCorner.Parent = TopBar

    local Title = Instance.new("TextLabel")
    Title.Parent = TopBar
    Title.Text = "ðŸŒ¹ " .. hubName
    Title.Size = UDim2.new(1, -70, 1, 0)
    Title.Position = UDim2.new(0, 10, 0, 0)
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.Font = Enum.Font.GothamBold
    Title.TextSize = 14
    Title.BackgroundTransparency = 1
    Title.TextXAlignment = Enum.TextXAlignment.Left

    -- FOLD BUTTON
    local FoldBtn = Instance.new("TextButton")
    FoldBtn.Name = "FoldBtn"
    FoldBtn.Parent = TopBar
    FoldBtn.Text = "ðŸŒ¹"
    FoldBtn.Size = UDim2.new(0, 30, 0, 30)
    FoldBtn.Position = UDim2.new(1, -35, 0, 2.5)
    FoldBtn.BackgroundTransparency = 1
    FoldBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    FoldBtn.TextSize = 18

    -- Sidebar (Tabs Holder)
    local Sidebar = Instance.new("ScrollingFrame")
    Sidebar.Name = "Sidebar"
    Sidebar.Parent = Main
    Sidebar.Position = UDim2.new(0, 5, 0, 40)
    Sidebar.Size = UDim2.new(0, 85, 1, -45)
    Sidebar.BackgroundTransparency = 1
    Sidebar.ScrollBarThickness = 0
    Sidebar.CanvasSize = UDim2.new(0, 0, 0, 0)
    Sidebar.AutomaticCanvasSize = Enum.AutomaticSize.Y
    
    local SidebarLayout = Instance.new("UIListLayout")
    SidebarLayout.Parent = Sidebar
    SidebarLayout.Padding = UDim.new(0, 5)

    -- Container for Pages
    local PageContainer = Instance.new("Frame")
    PageContainer.Name = "PageContainer"
    PageContainer.Parent = Main
    PageContainer.Position = UDim2.new(0, 95, 0, 40)
    PageContainer.Size = UDim2.new(1, -100, 1, -45)
    PageContainer.BackgroundTransparency = 1

    -- FOLDING LOGIC
    local folded = false
    FoldBtn.MouseButton1Click:Connect(function()
        folded = not folded
        local targetSize = folded and UDim2.new(0, 320, 0, 35) or UDim2.new(0, 320, 0, 260)
        TweenService:Create(Main, TweenInfo.new(0.4, Enum.EasingStyle.Quart), {Size = targetSize}):Play()
    end)

    -- DRAGGING LOGIC
    local dragging, dragStart, startPos
    TopBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = Main.Position
        end
    end)
    UserInputService.InputChanged:Connect(function(input)
        if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
            local delta = input.Position - dragStart
            Main.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    UserInputService.InputEnded:Connect(function(input) dragging = false end)

    local Tabs = {}
    function Tabs:AddTab(tabName)
        local TabBtn = Instance.new("TextButton")
        TabBtn.Parent = Sidebar
        TabBtn.Text = tabName
        TabBtn.Size = UDim2.new(1, 0, 0, 30)
        TabBtn.BackgroundColor3 = Color3.fromRGB(30, 0, 0)
        TabBtn.TextColor3 = Color3.fromRGB(200, 200, 200)
        TabBtn.Font = Enum.Font.GothamBold
        TabBtn.TextSize = 10
        Instance.new("UICorner", TabBtn)

        local Page = Instance.new("ScrollingFrame")
        Page.Parent = PageContainer
        Page.Size = UDim2.new(1, 0, 1, 0)
        Page.Visible = false
        Page.BackgroundTransparency = 1
        Page.ScrollBarThickness = 0
        Page.AutomaticCanvasSize = Enum.AutomaticSize.Y
        Instance.new("UIListLayout", Page).Padding = UDim.new(0, 5)

        TabBtn.MouseButton1Click:Connect(function()
            for _, p in pairs(PageContainer:GetChildren()) do p.Visible = false end
            for _, b in pairs(Sidebar:GetChildren()) do 
                if b:IsA("TextButton") then b.TextColor3 = Color3.fromRGB(200, 200, 200) end 
            end
            Page.Visible = true
            TabBtn.TextColor3 = Color3.fromRGB(255, 0, 0)
        end)

        -- Auto-show first tab
        if #Sidebar:GetChildren() == 2 then 
            Page.Visible = true 
            TabBtn.TextColor3 = Color3.fromRGB(255, 0, 0)
        end

        local Elements = {}
        function Elements:AddButton(txt, callback)
            local b = Instance.new("TextButton")
            b.Parent = Page
            b.Text = "ðŸŒ¹ " .. txt
            b.Size = UDim2.new(1, -5, 0, 35)
            b.BackgroundColor3 = Color3.fromRGB(45, 0, 0)
            b.TextColor3 = Color3.fromRGB(255, 255, 255)
            b.Font = Enum.Font.GothamSemibold
            b.TextSize = 12
            Instance.new("UICorner", b)
            b.MouseButton1Click:Connect(callback)
        end

        function Elements:AddLabel(txt)
            local l = Instance.new("TextLabel")
            l.Parent = Page
            l.Text = txt
            l.Size = UDim2.new(1, 0, 0, 25)
            l.TextColor3 = Color3.fromRGB(255, 100, 100)
            l.BackgroundTransparency = 1
            l.Font = Enum.Font.GothamBold
            l.TextSize = 11
        end

        return Elements
    end
    return Tabs
end

---------------------------------------------------------
-- SETUP NG WINDOW MO (PAG-ADD NG LAMAN)
---------------------------------------------------------

local window = JeloLib:CreateWindow("JELO HUB LOCAL")

-- TAB 1: MAIN
local MainTab = window:AddTab("Main")
MainTab:AddLabel("--- Player Settings ---")
MainTab:AddButton("Speed 100", function()
    Player.Character.Humanoid.WalkSpeed = 100
end)
MainTab:AddButton("Reset Speed", function()
    Player.Character.Humanoid.WalkSpeed = 16
end)

-- TAB 2: FARM
local FarmTab = window:AddTab("Farm")
FarmTab:AddLabel("--- Auto Farm ---")
FarmTab:AddButton("Auto Punch", function()
    print("Auto Punch Activated")
    -- Ilagay dito ang logic para sa auto punch
end)

-- TAB 3: SETTINGS
local SettingTab = window:AddTab("Settings")
SettingTab:AddButton("Destroy UI", function()
    Cleanup()
end)
